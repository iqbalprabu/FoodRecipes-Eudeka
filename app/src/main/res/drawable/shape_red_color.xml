<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#7C6B6A6A" />
            <corners android:radius="@dimen/dim_16dp" />
        </shape>
    </item>

    <item
        android:bottom="3dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#A3A2A3" />
            <corners android:radius="@dimen/dim_16dp" />
            <gradient
                android:angle="270"
                android:endColor="#D8DD2626"
                android:startColor="#B0FA1111" />
        </shape>
    </item>
</layer-list>